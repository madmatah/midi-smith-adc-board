{
    "C_Cpp.formatting": "disabled",
    "[cpp]": {
        "editor.formatOnSave": false
    },
    "[c]": {
        "editor.formatOnSave": false
    },
    "files.associations": {
        "*.h": "cpp"
    },
    "achilleshr.runonsave": {
        "commands": [
            {
                "match": ".*\\.(cpp|hpp|c|h)$",
                "cmd": "clang-format -i ${file}"
            }
        ]
    }
}
